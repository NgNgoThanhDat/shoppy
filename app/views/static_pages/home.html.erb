<% if logged_in? %>
  <div class="row">
    <aside class="small-4 medium-4 large-4 columns">
      <section class="user-info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost-form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="small-8 medium-8 large-8 columns user-micropost">
      <h4>Microposts Feed</h4>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <h1>Sample App</h1>
  <p>This is a home page</p>
<% end %>
