<% provide(:title, "Sign up") %>
<h1>Sign up</h1>

<div class="row">
  <div class="medium-6 medium-offset-3 columns">
    <%= form_for @user do |f| %>


      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "button primary hollow" %>
      <%= link_to "Cancel", root_path, class: "button alert" %>
    <% end %>
  </div>
</div>
