<h1>Showing Products</h1>
<p id="notice"><%= notice %></p>

<table class="stack hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @product.title %></td>
      <td><%= @product.description %></td>
      <td><%= @product.image_url %></td>
      <td><%= @product.price %></td>
      <td class="button-group">
        <%= link_to 'Edit', edit_product_path(@product), class: "button secondary hollow", id: "product-button" %>
        <%= link_to 'Cancel', products_path, class: "button alert" %>
      </td>
    </tr>
  </tbody>
</table>
