<p id="notice"><%= notice %></p>

<h2>Your Pragmatic Cart</h2>

<table class="stack hover">
  <tbody>
    <% @cart.line_items.each do |item| %>
    <tr id="tr-cart-show-name">
      <td><strong>Quantity</strong></td>
      <td><strong>Title</strong></td>
      <td><strong>Summary</strong></td>
    </tr>

      <tr id="tr-cart-show-content">
        <td><%= item.quantity %> &times;</td>
        <td><%= item.product.title %></td>
        <td><%= number_to_currency(item.total_price) %></td>
      </tr>
    <% end %>

    <tr>
      <td colspan="2" style="text-align: right"><strong>Total</strong></td>
      <td style="text-align: center"><strong><%= number_to_currency(@cart.total_price) %></strong></td>
    </tr>
  </tbody>
</table>

<div class="cart-show-button">
  <%= button_to 'Empty cart', @cart, method: :delete, data: {confirm: 'Are you sure?'}, class: "button alert" %>
</div>
